<form action="/charities/{{charityId}}/comments/{{comment._id}}?_method=PATCH" method="post">
    <div class="form-group">
        <label for="author">Donor:</label>
        <input type="text" name="author" value="{{comment.author}}">
    </div>
    <div class="form-group">
      <label for="amount">Amount:</label>
      <input type="number" name="amount" value="{{comment.amount}}">
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <input class="description" type="text" name="content" value="{{comment.content}}">
    </div>
    <button class="btn btn-primary" type="submit">Update</button>
</form>
