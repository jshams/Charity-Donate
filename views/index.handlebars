{{> itemForm}}
{{#each items}}
<div class="item">
  <h3>{{this.text}}</h3>
  <form action="/listitems/{{this._id}}?_method=DELETE" method="POST">
    <button type="submit">Delete</button>
  </form>
  <form action="/listitems/{{this._id}}/update" method="GET">
    <button type="submit">Edit</button>
  </form>
</div>
{{/each}}
